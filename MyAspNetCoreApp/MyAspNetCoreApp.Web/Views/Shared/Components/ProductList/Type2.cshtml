@model IEnumerable<ProductListComponentViewModel>
<a asp-controller="product" asp-action="index" class="btn btn-outline-primary">Ürünlere git</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>