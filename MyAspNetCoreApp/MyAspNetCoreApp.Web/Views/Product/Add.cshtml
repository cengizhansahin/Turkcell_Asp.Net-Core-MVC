@{
    ViewData["Title"] = "Add";
}
@model Product
<h1>Ürün Ekleme</h1>

<form asp-controller="Product" asp-action="Add" method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Ürün İsmi</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Ürün Fiyat</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Stock" class="form-label">Ürün Stok</label>
        <input asp-for="Stock" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="Color" class="form-label">Ürün Renk</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" for="IsPublish">
            Yayınlansın mı?
        </label>
        @foreach (var item in ViewBag.Expire as List<string>)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Expire" value="@item">
                <label class="form-check-label" for="Expire">
                    @item
                </label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
</form>